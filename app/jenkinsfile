pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout your code from GitHub
                git 'https://github.com/praggya-android/DEVOPS.git'
            }
        }
        
        stage('Install dependencies') {
            steps {
                // Install dependencies using pip
                sh 'pip install -r requirements.txt'
            }
        }
        
        stage('Run unittests') {
            steps {
                // Run your unittests
                sh 'python -m unittest discover -s tests -p "test_main.py"'
            }
        }
    }
